class Solution {
    public String reversePrefix(String word, char ch) {
        int i=0,c=0;
        while(i<word.length()){
            if(word.charAt(i)==ch){
                c=i;
                break;
            }
            i++;
        }
        StringBuilder sb=new StringBuilder();
        for(i=c;i>=0;i--){
           sb.append(word.charAt(i)); 
        }
        for(i=c+1;i<word.length();i++){
            sb.append(word.charAt(i));
        }
        return sb.toString();
    }
}
